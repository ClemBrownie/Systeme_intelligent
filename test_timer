#include <iostream>
#include <time.h>       /* clock_t, clock, CLOCKS_PER_SEC */
#include <math.h>       /* sqrt */
#include<unistd.h>  



int main ()
{
  clock_t t;
  
  t=0;
  int i=1;
  while(i<=20  ){
      t = clock();
      
      sleep(i);
      t=clock()-t;
      std::cout<<i<<" eme tour de boucle = "<<((float)t)/CLOCKS_PER_SEC<<" seconds"<<std::endl;
      i++;
  }
  printf ("It took me %d clicks (%f seconds).\n",t,((float)t)/CLOCKS_PER_SEC);
  
  
  
  
  return 0;
}
